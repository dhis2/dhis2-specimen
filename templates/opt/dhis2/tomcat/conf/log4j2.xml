<?xml version="1.0" encoding="UTF-8"?>
<!-- DHIS2 logging configuration file -->
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
    <Socket name="Socket" host="syslog.security.dhis2.org" port="10514" protocol="UDP">
      <JsonLayout properties="true" compact="true"/>
    </Socket>
  </Appenders>
  <Loggers>
    <!-- Exclude non-error messages from various loggers -->
    <Logger name="com.opensymphony" level="ERROR" additivity="false">
      <AppenderRef ref="Console" />
      <AppenderRef ref="Socket" />
    </Logger>
    <Logger name="org.apache" level="ERROR" additivity="false">
      <AppenderRef ref="Console" />
      <AppenderRef ref="Socket" />
    </Logger>
    <Logger name="org.flywaydb" level="ERROR" additivity="false">
      <AppenderRef ref="Console" />
      <AppenderRef ref="Socket" />
    </Logger>
    <Logger name="org.hibernate" level="ERROR" additivity="false">
      <AppenderRef ref="Console" />
      <AppenderRef ref="Socket" />
    </Logger>
    <Logger name="org.springframework" level="ERROR" additivity="false">
      <AppenderRef ref="Console" />
      <AppenderRef ref="Socket" />
    </Logger>
    <!-- Log all other events on the INFO level -->
    <Root level="INFO">
      <AppenderRef ref="Console" />
      <AppenderRef ref="Socket" />
    </Root>
  </Loggers>
</Configuration>
